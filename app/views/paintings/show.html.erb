<div class="container mt-4 ">

  <div class="card shadow" style="width: 30rem;">

    <%= cl_image_tag @painting.photo.key, height:"300px"%>
    <div class="card-body">
      <h1 class="card-title"><%= @painting.title %></h1>
      <p class="card-text"> some art I made in my free time</p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Width: <%= @painting.width %></li>
      <li class="list-group-item">Height: <%= @painting.height %></li>
      <li class="list-group-item">Price: <%= @painting.price %></li>
      <li class="list-group-item">Artist/Seller: <%=@author.user_name%></li>
    </ul>

    <div class="card-body d-flex justify-content-between">
      <%= simple_form_for ([@painting, @order]) do |f| %>
        <%= f.submit "Buy painting", class:"btn btn-primary"%>
      <% end %>
      <% if @painting.user == current_user %>
        <%= link_to "Edit Painting", edit_painting_path(@painting), class:"btn btn-primary"%>
      <% end %>
    </div>
  </div>
  <div class="container mt-3 mb-3">
    <%= link_to "Go back to home page", root_path, class:"btn btn-outline-secondary"%>
    <% if @painting.user == current_user %>
    <%= link_to "Delete Painting", painting_path(@painting), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to take down your painting?"}, class: "btn btn-outline-danger"%>
    <% end %>
  </div>
</div>
