<%= render "banner" %>
<div class="button-add sticky-top m-5 d-flex justify-content-right">
  <%= link_to "Sell your art", new_painting_path, class:"btn btn-primary" %>
  </div>
<div class="carousel-container">
  <div style="width:40%;">
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel" data-interval="3000">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="https://historia.nationalgeographic.com.es/medio/2023/05/09/bal-291665_de7602e2_230509095938_800x800.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://ethic.es/wp-content/uploads/2022/12/vangog-2-1280x768.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://historia.nationalgeographic.com.es/medio/2019/12/12/eugene-delacroix-la-libertad-guiando-al-pueblo_b0c2b521_1280x720.png" alt="Third slide">
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <% @paintings.each do |painting| %>
      <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
        <div class="card shadow-lg border border-light" style="width: 15rem;">
          <%= cl_image_tag painting.photo.key %>
          <p class="ml-3 "><%= link_to("more info", painting_path(painting))%></p>
          <div class="card-body">
            <h1 class="card-title"><%= painting.title %></h1>
            <p class="card-text">Measures: <%= "#{painting.width} x #{painting.height}" %></p>
            <p class="card-text">Price: <%= number_to_currency(painting.price) %></p>
            <p class="card-text"><em><%= painting.user.user_name %></em></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
