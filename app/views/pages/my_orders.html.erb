<div class="container p-4 justify-content-center">
  <h1>My Orders History</h1>
  <div class="justify-content-start">
    <% current_user.orders.each do |order| %>
      <div class="container w-75 m-5">
        <div class="card-product">
          <%= image_tag order.painting.photo.key, height: "200px" %>
          <div class="card-product-infos">
            <h2><%= order.painting.title %></h2>
            <p>Autor: <%= order.painting.user.user_name  %></p>
            <p>Price: $<%= order.painting.price %></p>
            <p>Fecha: <%= order.created_at.strftime("%d %B %Y") %> | Hora: <%= order.created_at.strftime("%H:%M:%S") %></p>
            <p><em>Order <%=order.id %></em></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
